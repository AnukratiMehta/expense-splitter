<h1>Create Group</h1>

<% if (error) { %>
  <p style="color:red;"><%= error %></p>
<% } %>

<form action="/groups/create" method="POST">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <label>Group Name:</label>
  <input type="text" name="name">

  <button type="submit">Create</button>
</form>
